use_bpm 145
use_synth :piano
intro = "C:/Users/rodney_phillips/Documents/Audacity/Kendrick Lamar - HUMBLE. (INSTRUMENTAL).wav"
lyrics = "C:/Users/rodney_phillips/Documents/Audacity/HUMBLE. - Vocals Only (Acapella)  Kendrick Lamar.wav"
talking = "C:/Users/rodney_phillips/Documents/Audacity/Kendrick Lamar is Too Humble ðŸ’¯.wav"
x = 1

define:humble do |x1,x2,x3|
  play :f4
  sleep 1
  play :f4
  sleep x1
  play :fs4
  sleep 1
  play :f4
  sleep 1
  play :as3
  sleep x2
  play :as3
  sleep 1
  play :as3
  sleep x3
  play :fs4
  sleep 1
end


